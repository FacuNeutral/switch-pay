{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {

      //% Configurations
      "@config/*": ["src/_common/config/*"],
      "@envs": ["src/_common/config/envs/env-var.plugin"],
      "@middlewares/*": ["src/_common/middlewares/*"],
      "@integrations/*": ["src/integrations/*"],
      "@decorators/*": ["src/_common/decorators/*"],

      //% Database's
      "@db/*": ["src/_common/database/main/*"],
      "@cache/*": ["src/_common/database/cache/*"],

      //% App Modules
      "@users/*": ["src/application/users/*"],
      "@auth/*": ["src/application/security/auth/*"],
      "@proofs/*": ["src/application/security/proofs/*"],
      "@recoveries/*": ["src/application/security/recoveries/*"],
      
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  }
}
